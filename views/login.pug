doctype html
html(lang="en")
	head
		title Login
	body
		h1 Login
		p Write the team you will belong.
		
		form(method='post')
			p
				label(for='team') Team
				input(type='text', name='team')
			p
				label(for='username') Username
				input(type='text', name='username')
			p
				label(for='password') Password
				input(type='password', name='password')

			input(type='submit')
			
			p
				li: a(href="/api") Back to start page
